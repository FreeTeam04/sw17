<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_transaction_activity_layout"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView android:id="@+id/add_transaction_header"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/add_transaction_text"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

    </TextView>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="297dp"
            android:layout_height="48dp"
            android:text="Save"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/editDescription"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Description"
            android:layout_marginBottom="59dp"
            app:layout_constraintBottom_toTopOf="@+id/datepickerDate"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.15"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <DatePicker
            android:id="@+id/datepickerDate"
            android:layout_width="339dp"
            android:layout_height="175dp"
            android:datePickerMode="spinner"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonSave"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editAmount"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:text="-"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerGategory"
            android:layout_marginStart="44dp" />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:text="+"
            app:layout_constraintLeft_toRightOf="@+id/buttonMinus"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerGategory" />

        <EditText
            android:id="@+id/editAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintLeft_toRightOf="@+id/buttonPlus"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerGategory"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <Spinner
            android:id="@+id/spinnerGategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/editDescription"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>